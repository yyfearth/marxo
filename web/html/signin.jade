#signin.mask
  .container-fluid
    form.form-signin
      h2.form-signin-heading Please sign in
      input.input-block-level(type='email', name='email', placeholder='Email', maxlength='255',
      value='test@example.com', required)
      input.input-block-level(type='password', name='password', placeholder='Password', maxlength='2048',
      value='test', required)
      label.checkbox
        input(type='checkbox', name='remember')
        | Remember me
      button.btn.btn-large.btn-primary(type='submit') Sign in
